{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/material-icons",
      "**/vuesax"
    ]
  },
  "scripts": {
    "release": "lerna publish",
    "release:force": "lerna publish --force-publish",
    "test": "lerna exec --scope='{*,**/core}' -- npm run test",
    "lint": "lerna exec --scope='*' -- npm run lint"
  },
  "devDependencies": {
    "lerna": "^3.3.0"
  }
}
